@{
    ViewBag.Title = "Index";
}
<h2>
    Index
</h2>
<script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>
@using (Html.BeginForm("Search","Ajax",FormMethod.Post))
{
    @Html.TextBox("SearchTerm")
    <input type="submit" value="Search" />
}

@Ajax.ActionLink("All", "All", new AjaxOptions
{
    HttpMethod = "GET",
    UpdateTargetId = "divStudent",
    InsertionMode = InsertionMode.Replace,
    LoadingElementId ="divloading"
})
<span>|</span>
@Ajax.ActionLink("Top3", "Top3", new AjaxOptions
{
    HttpMethod = "GET",
    UpdateTargetId = "divStudent",
    InsertionMode = InsertionMode.InsertBefore,
    LoadingElementId = "divloading"
})
<span>|</span>
@Ajax.ActionLink("Bottom3", "Bottom3", new AjaxOptions
{
    HttpMethod = "GET",
    UpdateTargetId = "divStudent",
    InsertionMode = InsertionMode.InsertAfter,
    LoadingElementId = "divloading"
})
<div id="divloading" style="display:none;">
    <img src="~/Images/loading.gif" />
</div>
<div id="divStudent">
</div>
